<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MonthlyActivity">

    <RelativeLayout
        android:id="@+id/monthly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:background="#FFFFFF"
        tools:context=".activity.MonthlyActivity"
        >
        <RelativeLayout
            android:id="@+id/mobile_stat"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="#FFFFFF"
            />
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/HomeBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/TextViewMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_serif_display"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="-3sp"
                        android:text="Month"
                        android:textSize="35dp" />

                    <TextView
                        android:id="@+id/TextViewYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="Year"
                        android:textSize="20dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/popUpMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#828282"
                    android:text="menu"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/dm_serif_display"
                    android:textSize="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            >
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="350dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/today"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/stressData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="50dp"
                        android:text="stress"
                        android:textSize="40dp"
                        android:fontFamily="@font/dm_serif_display"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/sleepData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="sleep"
                        android:fontFamily="@font/dm_serif_display"
                        android:textSize="40dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emotionDiary"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="430dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/today"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/emotionDiaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/do_hyeon"
                    android:text="오늘의 감정일지"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/emotionDiaryTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="170dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/do_hyeon"
                    android:text="Tag"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/emotionDiaryContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/do_hyeon"
                    android:text="아직 추가된 오늘의 감정일지가 없습니다."
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





    </LinearLayout>
</LinearLayout>