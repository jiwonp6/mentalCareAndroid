<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospital.HospitalActivity"
    android:padding="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTextHospitalSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="9"
                android:background="@drawable/edit_text_border"
                android:hint=" 병원명·주소로 검색"
                android:inputType="text"

                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/myReservationIcon"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:src="@drawable/person"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/localIcon"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_border"
        android:drawableRight="@drawable/location2"
        android:gravity="center"
        android:text="시·도별"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="382dp"
        android:layout_height="502dp"
        android:layout_marginTop="15sp" />

    <Button
        android:id="@+id/questionIcon"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:backgroundTint="#999C99"
        android:text="정신의학과에 관한 질문"
        android:textColor="@color/white"
        />


</LinearLayout>