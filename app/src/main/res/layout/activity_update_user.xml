<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateUserActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">


    <EditText
        android:id="@+id/EditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="현재 비밀번호를 입력하세요\n(회원 확인을 위해 반드시 입력해주세요)"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/EditTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="새로운 비밀번호를 입력하세요"
        android:inputType="text" />

    <EditText
        android:id="@+id/EditTextNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="변경할 닉네임을 입력하세요"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/UserGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남"/>

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"/>

        <RadioButton
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="none"/>
    </RadioGroup>

    <EditText
        android:id="@+id/EditTextBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="변경할 생년월일을 입력하세요"
        android:inputType="text" />

    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="변경할 이메일 주소를 입력하세요"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:id="@+id/EditTextPhonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="변경할 전화번호를 입력하세요"
        android:inputType="phone" />

    <Button
        android:id="@+id/buttonUpdateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 정보 변경" />
</LinearLayout>